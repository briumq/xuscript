// Test cross-module static method calls

func assert(x, msg="Assertion failed") { __builtin_assert(x, msg) }

use "tests/module_static_test/user.xu" as user_mod

func main() {
    // Test cross-module static method call: user_mod.User.create()
    let u = user_mod.User.create("Tom")
    assert(u.name == "Tom", "name should be Tom")
    println("Created user: {u.name}")

    // Test with multiple arguments
    let u2 = user_mod.User.create_with_age("Alice", 25)
    assert(u2.name == "Alice", "name should be Alice")
    assert(u2.age == 25, "age should be 25")
    println("Created user with age: {u2.name}, {u2.age}")

    println("All tests passed!")
}

main()
