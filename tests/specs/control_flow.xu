func assert(x) { __builtin_assert(x) }

// if statement
var result = ""
let x = 5
if x > 0 {
    result = "positive"
} else if x < 0 {
    result = "negative"
} else {
    result = "zero"
}
assert(result is "positive")

// if without else
var result2 = "default"
if false {
    result2 = "changed"
}
assert(result2 is "default")

// if expression
let y = 5
let sign1 = if y >= 0 { 1 } else { -1 }
assert(sign1 is 1)
let z = -5
let sign2 = if z >= 0 { 1 } else { -1 }
assert(sign2 is -1)

// while loop
var i = 0
var sum = 0
while i < 5 {
    sum += i
    i += 1
}
assert(sum is 10)

// while break
var j = 0
while true {
    j += 1
    if j is 5 {
        break
    }
}
assert(j is 5)

// while continue
var sum2 = 0
var k = 0
while k < 10 {
    k += 1
    if k % 2 is 0 {
        continue
    }
    sum2 += k
}
assert(sum2 is 25) // 1+3+5+7+9

// for range
var sum3 = 0
for n in 0..5 {
    sum3 += n
}
assert(sum3 is 10)

// for list
let list = [1, 2, 3, 4, 5]
var sum4 = 0
for x2 in list {
    sum4 += x2
}
assert(sum4 is 15)

// for dict (iterate keys)
let dict = {"a": 1, "b": 2, "c": 3}
var sum5 = 0
for key in dict {
    sum5 += dict[key]
}
assert(sum5 is 6)

// for break
var last = 0
for i2 in 0..10 {
    if i2 is 5 {
        break
    }
    last = i2
}
assert(last is 4)
