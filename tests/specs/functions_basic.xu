func assert(x) { __builtin_assert(x) }

// basic function
func add(a: int, b: int) -> int {
    return a + b
}
assert(add(2, 3) == 5)

// default parameter
func greet(name: string, msg = "Hello") -> string {
    return "{msg}, {name}!"
}
assert(greet("Alice") == "Hello, Alice!")
assert(greet("Bob", "Hi") == "Hi, Bob!")
