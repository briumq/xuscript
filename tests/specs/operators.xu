func assert(x) { __builtin_assert(x) }

// arithmetic int
assert(10 + 3 == 13)
assert(10 - 3 == 7)
assert(10 * 3 == 30)
assert(10 / 3 == 3)
assert(10 % 3 == 1)

// arithmetic float
assert(10.0 + 3.0 == 13.0)
assert(10.0 / 4.0 == 2.5)

// comparison
assert(5 > 3)
assert(3 < 5)
assert(5 >= 5)
assert(5 <= 5)
assert(5 == 5)
assert(5 == 5)
assert(5 != 3)
assert(5 != 3)

// logical
assert(true && true)
assert(!(true && false))
assert(!(false && true))
assert(!(false && false))

assert(true || true)
assert(true || false)
assert(false || true)
assert(!(false || false))

assert(!false)
assert(!(!true))

// short-circuit
var called1 = false
func side_effect1() -> bool {
    called1 = true
    return true
}
let r1 = false && side_effect1()
assert(!called1)

var called2 = false
func side_effect2() -> bool {
    called2 = true
    return true
}
let r2 = true || side_effect2()
assert(!called2)

// string concat
let a = "hello"
let b = " world"
assert(a + b == "hello world")
