func assert(x) { __builtin_assert(x) }

// 1. Test Multiple Return Values (via Tuple)
func divmod(a: int, b: int) -> (int, int) {
    return (a / b, a % b)
}

let (q, r) = divmod(10, 3)
assert(q == 3)
assert(r == 1)

// 2. Test Tuple Creation and Access
let t = (1, "hello", true)
assert(t.0 == 1)
assert(t.1 == "hello")
assert(t.2)

// 3. Test Wildcard Destructuring in let binding
let (x, _, z) = (10, 20, 30)
assert(x == 10)
assert(z == 30)

// 4. Test Wildcard in match pattern
// Note: In match patterns, '_' is a true wildcard
let match_res = match t {
    (1, _, _) { "starts with 1" }
    _ { "other" }
}
assert(match_res == "starts with 1")
