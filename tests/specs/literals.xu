func assert(x, msg="Assertion failed") { __builtin_assert(x, msg) }

// integer literals
let a = 42
let b = -17
let c = 0xFF
let d = 0b1010
let e = 1_000_000

assert(a == 42, "a")
assert(b == -17, "b")
assert(c == 255, "c")
assert(d == 10, "d")
assert(e == 1000000, "e")

// float literals
let f1 = 3.14
let f2 = -0.5
let f3 = 1.0e10
let f4 = 2.5e-3

assert(f1 == 3.14, "f1")
assert(f2 == -0.5, "f2")
assert(f3 == 10000000000.0, "f3")
assert(f4 == 0.0025, "f4")

// string literals
let s1 = "hello"
let s2 = "line1\nline2"
let s3 = """
multiline
string
"""
let s4 = r"raw\nstring"

assert(s1 == "hello", "s1")
assert(s2.contains("\n"), "s2 contains")
assert(s3.contains("multiline"), "s3 contains")
assert(s4.contains("\\n"), "s4 contains")

// boolean literals
let t = true
let f = false
assert(t == true, "t")
assert(f == false, "f")
assert(t != f, "t != f")
