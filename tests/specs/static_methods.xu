func assert(x, msg="Assertion failed") { __builtin_assert(x, msg) }

User has {
    name: string

    func greet() -> string {
        return "Hi, {self.name}"
    }

    static func create(name: string) -> User {
        return User{ name: name }
    }
}

let u = User.create("Tom")
assert(u.name is "Tom", "name")
assert(u.greet() is "Hi, Tom", "greet")

