{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Xu",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.xu",
          "match": "//.*$"
        },
        {
          "name": "comment.block.xu",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.raw.xu",
          "begin": "r\"",
          "end": "\"",
          "patterns": []
        },
        {
          "name": "string.quoted.triple.xu",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "include": "#interpolation"
            },
            {
              "name": "constant.character.escape.xu",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.xu",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#interpolation"
            },
            {
              "name": "constant.character.escape.xu",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "interpolation": {
      "name": "meta.embedded.line.xu",
      "begin": "\\{",
      "end": "\\}",
      "patterns": [
        {
          "include": "$self"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.xu",
          "match": "\\b(if|else|while|for|return|break|continue|match|when|try|catch|finally|throw)\\b"
        },
        {
          "name": "keyword.declaration.xu",
          "match": "\\b(let|var|func|has|with|does|use|as)\\b"
        },
        {
          "name": "keyword.operator.word.xu",
          "match": "\\b(in|not|and|or|is|isnt)\\b"
        },
        {
          "name": "storage.modifier.xu",
          "match": "\\b(inner|static)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.xu",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.language.self.xu",
          "match": "\\bself\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.binary.xu",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.hex.xu",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.float.xu",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.decimal.xu",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.xu",
          "match": "\\b(int|float|string|bool|str|text)\\b"
        },
        {
          "name": "entity.name.type.xu",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.definition.xu",
          "match": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.xu"
            },
            "2": {
              "name": "entity.name.function.xu"
            }
          }
        },
        {
          "name": "meta.function.call.xu",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.xu"
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.xu",
          "match": "(\\+|\\-|\\*|/|%|\\=|\\>|\\<|\\!|\\.|\\:|\\#)"
        },
        {
          "name": "keyword.operator.arrow.xu",
          "match": "\\-\\>"
        }
      ]
    }
  },
  "scopeName": "source.xu"
}
